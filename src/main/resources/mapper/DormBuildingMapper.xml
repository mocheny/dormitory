<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatic.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.it985.dormitory.mapper.DormBuildingMapper">

    <select id="findByPage" resultType="com.it985.dormitory.entity.DormBuilding">
        select *
        from tab_dorm_building
        where 1 = 1
        <if test="searchContent != null and searchContent != ''">
            and dbname like concat('%', #{searchContent}, '%')
        </if>
        limit #{start}, #{size}
    </select>

    <select id="findTotalCount" resultType="java.lang.Integer">
        select count(*)
        from tab_dorm_building
        where 1 = 1
        <if test="searchContent != null and searchContent != ''">
            and dbname like concat('%', #{searchContent}, '%')
        </if>
    </select>

</mapper>